    <script>  
    let update;
    var fpv = 0;
    $(document).ready(function(){
      $('#mytable').on('click','.edit',function(){
        var id = $(this).data('id1');
        var name = $(this).data('id6');
        var vnum = $(this).data('id2');
        var vol = $(this).data('id3');
        var uunit = $(this).data('id4');
        var unit = $(this).data('id5');
        fpv = $(this).data('id7');
        var bools = $(this).data('id8');

        document.getElementById("lvolume").innerHTML = "Volume: "+vol;
        document.getElementById("lunit").innerHTML = "Unit: "+unit;
        document.getElementById("product").innerHTML = "Product Name: "+name;
        document.getElementById("tvol").value = vnum;
        document.getElementById("tunit").value = uunit;
        document.getElementById("myForm").action = "/updateinventory?para1=" + id;

        if(bools == true)
        {
            document.getElementById("tmcheck").checked = true;
        }
        else
        {
            document.getElementById("fmcheck").checked = true;
        }
        $('#EditModal').modal('show');
      });

    display();
      
            
            
    });
  function volkeypress()
  {
     var nvol = document.getElementById("tvol").value;
     var nunit = document.getElementById("tunit").value;

      
    var remain = nunit % fpv;
    document.getElementById("tunit").value = ((parseInt(nvol) * fpv) + remain);

  }
  function changeaction()
  {
      var cat = document.getElementById("category").value;
      if(cat.toString() == "Product Name")
      {
        
          document.getElementById("myForm1").action = "\searchinventory";

      }
      else if(cat.toString() == "Category")
      {
          document.getElementById("myForm1").action = "\searchinventory1";
      }
  }
  
  function unitkeypress()
  {
      var nunit = document.getElementById("tunit").value;
      var temp = nunit;
      var num = 0;
      while(temp >= fpv)
      {  
          temp-= fpv;
          num++;
      }
      document.getElementById("tvol").value = num;
  }
  function display()
  {
    let array = [];
    let array1 = [];
    let uarray = [];
    let uarray1 = [];
    let uarray2 = [];
    let uarray3 = [];
    let uarray4 = [];
    let uarray5 = [];
    var list = $("#yey");
    list.empty();
    let ctr = 0;
    {{#each result}}
    array[ctr] = "{{cid}}";
    array1[ctr] = "{{cname}}";
    ctr++;
    {{/each}}

    let ctr1 = 0;
    {{#each resultss}}
    uarray[ctr1] = "{{pid}}";
    uarray1[ctr1] = "{{b_p}}";
    uarray2[ctr1] = "{{bundles}}";
    uarray3[ctr1] = "{{unitm}}";
    uarray4[ctr1] = "{{quantity}}"
    uarray5[ctr1] = "{{movement}}"
    ctr1++;
    {{/each}}
    let count = 0;
    {{#each results}}
    count++;
    var cat;
    var unit;
    var volume;
    var punit;
    var quan;
    var bools;
    for(let x = 0;x < ctr; x++)
    {
        if(array[x].toString() == "{{pcat}}")
        {
            cat = array1[x];
        }
    }
    for(let x= 0;x < ctr1;x++)
    {
      
        if(uarray[x] == "{{pid}}")
        {
            punit = parseInt(uarray1[x]);
            volume = uarray2[x];
            unit = uarray3[x];
            quan = parseInt(uarray4[x]);
            bools = uarray5[x];
        }
    }
    var tempq = quan;
    var num = 0;
    var move = "Slow Moving";
    while(tempq >= punit)
    {
        tempq -= punit;
        num++;
    }
    if(bools == true)
    {
        move = "Fast Moving";
    }



    var add = "<tr><td>"+count+"</td><td>{{pname}}</td><td>"+cat+"</td><td id='c1_"+count+"'>"+num+" "+volume+"</td><td id='c2_"+count+"'>"+quan+" "+unit+"</td><td>"+move+"</td>"+
    "<td><a href='javascript:void(0)' class='edit'  data-id1='{{pid}}' data-id2="+num+" data-id3='"+volume+"' data-id4='"+quan+"' data-id5='"+unit+"' data-id6='{{pname}}' data-id7='"+punit+"' data-id8='"+bools+"'>Edit Inventory</a></tr>";
    
            

            

    list.append(add);
            var color = "red";
            if(bools == true)
            {
                if(num > 3)
                {
                      color = "yellow";
                }
            }
            else
            {  
                if(num > 1)
                {
                      color = "yellow";
                }
            }
            var id1 = "c1_" + count;
            var x = document.getElementById(id1);
            x.style.backgroundColor = color; 
            var id1 = "c2_" + count;
            var x = document.getElementById(id1);
            x.style.backgroundColor = color; 
    {{/each}}
  }
  
  </script>
