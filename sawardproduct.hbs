<fieldset style="margin-left:100px; margin-right:100px; margin-bottom:100px; margin-top: 5%;">
  <div class="table-responsive">
  <legend style="text-align: center;">Award Products</legend>
<table class="table" id="mytable">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Product_Name</th>
                  <th>Category</th>
                  <th>Volume</th>
                  <th>Unit</th>
                  <th>Price_Per_Volume</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
    {{#each result}}
    <tr>
      <td>{{psupid}}</td>
      <td>{{pname}}</td>
      <td>{{cname}}</td>
      <td>{{volume}}</td>
      <td>{{unit}}</td>
      <td>{{pprice}}</td>
      <td><a href="javascript:void(0)" class="update" data-id1={{psupid}} data-id2={{pname}} data-id3={{cname}} data-id4={{volume}} data-id5="{{unit}}" data-id6={{pprice}}>Update</a></td>
    </tr>
    {{/each}}
     </tbody>
</table>
</div>
</fieldset>

 <form id="myForm" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Update Price</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              
              <div class="form-group">
                  <label for="disabledSelect" id="product">Product: </label>
              </div>
              <div class="form-group">
                  <label for="disabledSelect" id="lcategory">Category</label>
              </div>
              <div class="form-group">
                  <label for="disabledSelect" id="lvolume">Volume</label>
              </div>

              
              <div class="form-group">  
                  <label for="disabledSelect" id="lunit"></label>
                  <input type="Number" name="price" id="price" class="form-control product_name" required>
              </div>
              
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" class="product_id">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" onclick="update();" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>
  <script>
    var id;
    var sid = localStorage.getItem("sid");
     $(document).ready(function(){
      $('#mytable').on('click','.update',function(){
            id = $(this).data('id1');
            var name = $(this).data('id2');
            var cname = $(this).data('id3');
            var volumes = $(this).data('id4');
            var unit = $(this).data('id5');
            var price = $(this).data('id6');
            document.getElementById("product").innerHTML = "Product: "+name;
            document.getElementById("lcategory").innerHTML = "Category: "+cname;
            document.getElementById("lvolume").innerHTML = "Per "+volumes+": "+unit;
            document.getElementById("lunit").innerHTML = "Price Per "+volumes+":";
            document.getElementById("price").value = price;
            $('#EditModal').modal('show');
    });
    });
    function update()
    {
        document.getElementById("myForm").action = "/updateprice?para1="+id+"&para2="+sid;

    }
  </script>
