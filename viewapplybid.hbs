      <td>{{scompany}}</td>
      <td>{{stype}}</td>
      <td>{{saddress}}</td>
      <td>{{scontact}}</td>
      <td>P{{aprice}}</td>
      <td><a href="javascript:void(0)" class="award"  data-id1="{{apply_id}}"  data-id2="{{sid}}" data-id3="{{aprice}}">Award</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="javascript:void(0)" class="deny"  data-id1="{{apply_id}}">Deny</a></td>
    </tr>
    {{/each}}
 </tbody>
</table>
</div>
  
