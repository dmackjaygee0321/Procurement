 <form id="myForm" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Create Auction</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              
              <div class="form-group">
                  <label for="disabledSelect" id="product">Product: </label>
              </div>
              
              <div class="form-group">
                  <label for="disabledSelect" id="category">Category: </label>
              </div>
              <div class="form-group">
                  <label for="disabledSelect" id="lvolume">Volume</label>
                  <input type="Number" name="tvol" id="tvol" class="form-control product_name" onkeyup="volkeypress()" onmouseup="volkeypress()" required>
              </div>

              <div class="form-group">
                  <label for="disabledSelect" id="lunit">Unit</label>
                  <input type="Number" name="tunit" class="form-control product_name" id="tunit" onkeyup="unitkeypress()" onmouseup="unitkeypress()"required>
              </div>
              
            <div class="modal-footer">
              <input type="hidden" name="id" class="product_id">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" onclick="createbid();" class="btn btn-primary">Create</button>
            </div>
          </div>
        </div>
       </div>
  </form>

    <script>  
    $(document).ready(function(){
      display();
    });
    var bid;
    var pid;
    function display()
    {
        {{#each result}}
        bid = "{{bidid}}";
        pid = "{{pid}}";
        document.getElementById("pname").innerHTML = "Product Name: {{pname}}";
        document.getElementById("pcategory").innerHTML = "Category: {{cname}}";
        document.getElementById("pvolume").innerHTML = "Per {{volume}}: {{unit}}";
        document.getElementById("pdate").innerHTML = "Bid Upload Date: {{bdate}}";
        {{/each}}
    }
      $('#mytable').on('click','.award',function(){
        
        let array = [];
        var count = 0;
        {{#each results}}
        array[count] = "{{apply_id}}";
        count++;
      
        {{/each}}
        console.log(array);
        var id = $(this).data('id1');
        var sid = $(this).data('id2');
        var sprice = $(this).data('id3');
        var text = "";
        for(let x=0;x < count;x++)
        {
            text+="&array"+x+"="+array[x];
        }
        window.location.href = "/awardsupp?para1="+id+"&para2="+count+"&para3="+pid+"&para4="+bid+"&para5="+sid+"&para6="+sprice+text;
      });
      
      $('#mytable').on('click','.deny',function(){
        
        var id = $(this).data('id1');
        window.location.href = "/denysupp?para1="+id+"&para2="+bid;
      });
  </script>
